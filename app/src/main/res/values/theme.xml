<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- In-game overlay buttons. -->
	<style name="Widget.Needle.GameButton.Primary" parent="android:Widget.Button">
		<!-- Background -->
		<item name="android:background">@drawable/game_button</item>

		<!-- Text -->
		<item name="android:textColor">#77777777</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textAllCaps">false</item>

		<!-- Font -->
		<item name="android:fontFamily">@font/megalopolis_extra</item>

		<!-- Remove default Material insets if needed -->
		<!--<item name="android:insetLeft">0dp</item>-->
		<!--<item name="android:insetRight">0dp</item>-->
		<!--<item name="android:insetTop">0dp</item>-->
		<!--<item name="android:insetBottom">0dp</item>-->
	</style>

	<!-- Theme used for the main Game activity. -->
	<style name="Theme.Blank" parent="">
		<item name="android:windowBackground">@android:color/black</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">true</item>
	</style>

	<!-- SVG resources expect this value to exist. -->
	<attr name="colorControlNormal" format="color">#ffffff</attr>
</resources>
