	<item android:state_pressed="true">
		<shape>
			<!-- Background color -->
			<solid android:color="#B0B0B0B0" />
			<corners android:radius="32dp" />

			<!-- Border / stroke -->
			<stroke android:width="4dp" android:color="#89898989" />

			<!-- Optional internal padding -->
			<padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp" />
		</shape>
	</item>

	<item>
		<shape>
			<!-- Background color -->
			<solid android:color="#5b5b5b5b" />
